{
  "name": "Imperium Codespace",
  "image": "mcr.microsoft.com/devcontainers/dotnet:1-10.0-noble",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.nuget && cd /workspaces/imperium && dotnet tool restore && dotnet restore Imperium.sln",
  "forwardPorts": [5000, 5001],
  "mounts": [
    "source=nuget,target=/home/vscode/.nuget/packages,type=volume"
  ],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "andenetalexander.vim-cheatsheet",
        "anthropic.claude-code",
        "davidanson.vscode-markdownlint",
        "dbaeumer.vscode-eslint",
        "editorconfig.editorconfig",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-pull-request-github",
        "humao.rest-client",
        "Ionide.ionide-fsharp",
        "ms-azuretools.azure-dev",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "streetsidesoftware.code-spell-checker",
        "vintharas.learn-vim",
        "vscodevim.vim",
        "anthropic.claude-vscode"
      ],
      "settings": {
        "dotnetAcquisitionExtension.enableTelemetry": false
      }
    },
    "codespaces": {
      "openFiles": [
        "AGENTS.md"
      ]
    }
  },
  "containerEnv": {
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1"
  }
}
